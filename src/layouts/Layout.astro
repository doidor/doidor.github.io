---
import GA from "../components/GA.astro";

export interface Props {
  title: string;
}

const { title } = Astro.props as Props;

const BG_COLORS = [
  "#302b63",
  "#4286f4",
  "#373B44",
  "#4A00E0",
  "#2ebf91",
  "#8360c3",
  "#43C6AC",
  "#516395"
];

const currentColor = BG_COLORS[
  Math.floor(Math.random() * BG_COLORS.length)
];
const bgColor = `background: ${currentColor};`;
const iconUrl = `/assets/ico/favicon_${currentColor.substring(1)}.ico`;

---

<!DOCTYPE html>
<html lang="en">

<head>
  <!-- Global site tag (gtag.js) - Google Analytics -->
  <GA />
  <title>{title}</title>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <meta name="description"
    content="Tudor Popa - Passionate about software engineering with a strong emphasis on software architecture and artificial intelligence." />
  <link rel="stylesheet" href="assets/css/main.css" />
  <link href="assets/fontawesome/css/all.min.css" rel="stylesheet" />
  <link type="image/x-icon" rel="shortcut icon" href={iconUrl} />
  <noscript>
    <link rel="stylesheet" href="assets/css/noscript.css" />
  </noscript>
</head>

<body>
  <div id="wrapper">
    <div id="bg" style={bgColor}></div>
    <div id="overlay"></div>
    <div id="main">
      <slot />
    </div>
  </div>
  <script define:vars={{currentColor}}>
    window.ontouchmove = function () {
      return false;
    };

    window.onorientationchange = function () {
      document.body.scrollTop = 0;
    };

    const consoleColor = `background: ${currentColor}; color: white;`;
    const style = {
      header: `text-shadow: 1px 1px gray; font-size: 25px; ${consoleColor}`,
      normal: `font-weight: bold; font-size: 14px;`
    };
    console.log("%cHello there!", style.header);
    console.log(
      "%cSince you've also found this part of the site, let me just give you my links again:",
      style.normal
    );
    console.log("");
    console.log(
      "%c- Resume: https://github.com/doidor/resume/blob/master/resume.pdf",
      style.normal
    );
    console.log(
      "%c- LinkedId: https://www.linkedin.com/in/tdrpopa/",
      style.normal
    );
    console.log("%c- Mail: tdr.popa@gmail.com", style.normal);
    console.log("%c- Github: https://github.com/doidor", style.normal);
    console.log("%c- Medium: https://medium.com/@tdr.popa", style.normal);
    console.log("");
    console.log("%cCheers!", style.normal);
  </script>
</body>

</html>